<div class="container">
  <div class="row">
    <% if @search[:model]=="Users" %>
      <h2>User serach for "<%= @search[:query] %>"</h2>
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th></th>
            <th>Name</th>
            <th>Introduction</th>
          </tr>
        </thead>
        <tbody>
          <% @objects.each do |user| %>
            <tr>
              <td><%= image_tag user.get_profile_image,size: '50x50' %> </td>
              <td>
                <%= link_to user_path(user) do %>
                  <%= user.name %>
                <% end %>
              </td>
              <td><%= user.introduction %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <h2>Book serach for "<%= @search[:query] %>"</h2>
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @objects.each do |book| %>
            <tr>
              <td><%= image_tag book.user.get_profile_image,size: '50x50' %> </td>
              <td>
                <%= link_to book_path(book) do %>
                  <%= book.title %>
                <% end %>
              </td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% end %>
  </div>
</div>

