<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan=""></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% books.each do |book| %>
      <tr>
        <td><%= link_to(book.user) do %>
          <%= image_tag book.user.get_profile_image, size: '50x50' %>
          <% end %>
        </td>
        <td><%= link_to book.title,book, class: "book_#{book.id}" %></td>
        <td><%= book.body %></td>
        <td>
          <% if book.favorite_exist?(current_user) %>
            <%= link_to book_favorites_path(book),method: :delete do %>
              <p class="text-danger">★<%= book.favorites.count %></p>︎
            <% end %>
          <% else %>
            <%= link_to book_favorites_path(book),method: :post do %>
              <p>☆<%= book.favorites.count %></p>︎
            <% end %>
          <% end %>
        </td>
        <td>
          <span>コメント数：<%= book.comments.count %>件</span>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>